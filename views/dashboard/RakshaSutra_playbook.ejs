    <style>
        /* Base card styling */
        .card {
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            position: relative;
            transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease, border 0.3s ease;
        }

        /* Card hover effect */
        .card:hover {
            border-color: transparent;
            border-image-source: linear-gradient(to top, #5A4B8E, #E63946);
            border-image-slice: 1;
            transform: scale(1.05);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .card-img-top {
            width: 100%;
            height: 200px;
            object-fit: cover;
            transition: opacity 0.5s ease;
        }

        .card-body {
            padding: 15px;
            text-align: center;
        }

        .card-title {
            font-size: 1.25rem;
            margin-bottom: 10px;
            color: #5A4B8E;
        }

        .card-text {
            font-size: 0.875rem;
            color: #333;
        }

        /* Responsive card layout */
        @media (max-width: 768px) {
            .col-md-4 {
                margin-bottom: 20px;
            }
        }

        /* Spacing between rows */
        .row.mb-4 {
            margin-bottom: 40px;
        }

        footer {
            background-color: #5A4B8E;
            color: white;
            text-align: center;
            padding: 10px;
            position: absolute;
            width: 100%;
            bottom: 0;
        }
        .footer-text {
            color: #5A4B8E;
            font-size: 1rem;
        }
    </style>
</head>
